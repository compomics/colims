    <profiles>
        <profile>
            <id>development</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <property_file.source>classpath</property_file.source>
            </properties>
        </profile>

        <profile>
            <id>production</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <property_file.source>file</property_file.source>
            </properties>
        </profile>

        <profile>
            <!-- Only run Unit Tests with Coverage -->
            <id>unit-tests</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <property_file.source>classpath</property_file.source>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <includes>
                                <include>**/FastUnitTests.class</include>
                                <include>**/SlowUnitTests.class</include>
                            </includes>
                            <excludes>
                                <exclude>**/*IT.class</exclude>
                            </excludes>
                            <!--<argLine>@{argLine}</argLine>-->
                            <argLine>-Xmx1024m</argLine>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>int-tests</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <property_file.source>classpath</property_file.source>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <configuration>
                            <includes>
                                <!-- default for failsafe-plugin is **/*IT.java  -->
                                <include>**/*IT.class</include>
                            </includes>
                            <excludes>
                                <exclude>**/PeptideShakerImporterIT.class</exclude>
                                <exclude>**/PeptideShakerIOIT.class</exclude>
                            </excludes>
                            <!--<argLine>@{argLine}</argLine>-->
                            <argLine>-Xmx1024m</argLine>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
