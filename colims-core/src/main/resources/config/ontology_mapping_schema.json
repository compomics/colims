{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "resource": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "mapping_types": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "mappings": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "ontology_term": {
                            "type": "object",
                            "properties": {
                              "obo_namespace": {
                                "type": "string"
                              },
                              "obo_id": {
                                "type": "string"
                              },
                              "label": {
                                "type": "string"
                              }
                            },
                            "required": [
                              "obo_namespace",
                              "obo_id",
                              "label"
                            ]
                          }
                        },
                        "required": [
                          "name",
                          "ontology_term"
                        ]
                      }
                    }
                  },
                  "required": [
                    "name",
                    "mappings"
                  ]
                }
              }
            },
            "required": [
              "name",
              "mapping_types"
            ]
          }
        },
        "required": [
          "resource"
        ]
      }
    }
  },
  "required": [
